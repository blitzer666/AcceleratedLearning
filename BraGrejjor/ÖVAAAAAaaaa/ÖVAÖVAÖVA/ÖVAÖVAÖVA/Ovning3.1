    class Ovning3
    {
        static void Main(string[] args)
        {
            Console.WriteLine("When did you go to sleep yesterday? ");
            int goToBed = int.Parse(Console.ReadLine());

            Console.WriteLine("When did you wake up? ");
            int wakeUp = int.Parse(Console.ReadLine());

            int hoursSleept;

            if (goToBed > wakeUp)
                hoursSleept = wakeUp + (24 - goToBed);
            else
                hoursSleept = wakeUp - goToBed;


            Console.ForegroundColor = ConsoleColor.Green;
            Console.WriteLine();

            if (hoursSleept < 6)
            {
                Console.WriteLine($"You've only sleept {hoursSleept} hours. Go back to bed!");

            }
            else if(hoursSleept > 12)
            {
                Console.WriteLine($"You've sleept {hoursSleept} hours. That's a lot.");
            }
            else
            {
                Console.WriteLine($"You have slept well. {hoursSleept} hours)");
            }

            Console.ResetColor();
            Console.ReadLine();

        }
    }
}